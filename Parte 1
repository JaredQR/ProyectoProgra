#datos
from modulocar import*

print("****** CRUCERO AL CARIBE *******")
      
nombre=input("INGRESE SU NOMBRE: ")
while(not verifica(nombre)):
    nombre=input("Lo ingresado es invalido,vuelva a ingresar")

DNI=""
while True:
    try:
        d=int(input("Ingrese el numero de su DNI: "))
        while(len(str(d))!=8):
              d=int(input("Lo ingresado es invalido,vuelva a ingresar"))
        DNI=str(d)
        break
    except ValueError:
        print("Lo ingresado es invalido,vuelva a ingresar")

TELEF=""
while True:
    try:
        fon=int(input("Ingrese su numero de telefono o celular"))
        while(len(str(fon))!=9):
                fon=int(input("Lo ingresado es invalido,vuelva a ingresar"))
        TELEF=str(fon)
        break
    except ValueError:
        print("Lo ingresado es invalido,vuelva a ingresar")
                    


