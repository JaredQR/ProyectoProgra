def salir():
    sal=input("Realmente deseas salir SI/NO: ")
    if sal=="Si" or sal=="SI" or sal=="si":
        sys.exit(5)
    elif sal=="NO" or sal=="no" or sal=="No":
        menuprincipal()
    else:
        print("Ingrese  SI/NO porfavor")
        salir()
def op():
    print("")
    s1=input("Deseas regresar al menú principal SI/NO: ")
    if s1=="Si" or s1=="SI" or s1=="si":
        menuprincipal()
    elif s1=="NO" or s1=="no" or s1=="No":
        salir()
    else:
        print("")
        print("Ingrese  SI/NO porfavor")
        op()

