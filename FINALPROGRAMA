                                elif th2a==2:
                                    th2='KIND B'
                                    print("")
                                    print("\tSeleccion de tipo de viaje")
                                    print("\t[1]    |    Normal")
                                    print("\t[2]    |    Aventura")
                                    print("\t[3]    |    Extremo")
                                    print("\t[4]    |    Peace")
                                    print("\t--------------------------------")
                                    while True:
                                        try:
                                            th3a=0
                                            while (th3a!=1 and th3a!=2 and th3a!=3 and th3a!=4):
                                                th3a=int(input("\tTipo de viaje : "))
                                                if th3a==1:
