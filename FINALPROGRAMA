#---------------------------------------------------------------
#       REGISTRO
#---------------------------------------------------------------

def nombr():
    n=str(input("\tNombre :"))
    while(not verificar(n)):
        n=str(input("\tIngres su nombre correctamente :"))

def apellidp():
    n=str(input("\tApellido Paterno:"))
    while(not verificar(n)):
        n=str(input("\tIngres su apellido paterno correctamente :"))
        
def apellidm():
    n=str(input("\tApellido Materno :"))
    while(not verificar(n)):
        n=str(input("\tIngres su apellido materno correctamente :"))

def nacionalida():
    n=str(input("\tNacionalidad :"))
    while(not verificar(n)):
        n=str(input("\tIngres su nacionalidad correctamente :"))

def ciuda():
    n=str(input("\tCiudad :"))
    while(not verificar(n)):
        n=str(input("\tIngres su apellido materno correctamente :"))    
      
def verificar(n):
    for c in n:
        if(ord(c)<65 or  ord(c)>90) and (ord(c)<97 or  ord(c)>122) and (ord(c)!=32):
            return False
    return True   

#---------------------------------------------------------------
#       MENU
#---------------------------------------------------------------

def menureser():
    os.system("cls")
    print("")
    print("\tMENU RESERVACIONES CRUCERO")
    print("")
    print("\t[1]  |   Ver reservaciones")
    print("\t[2]  |   Agregar reservaciones")
    print("\t[3]  |   Modificar reservaciones")
    print("\t[4]  |   Eliminar reservaciones")
    print("\t[5]  |   Volver al menu principal")
    print("")
    re= input("\tDigite una opcion del menu: ")

    if re== "1":
        os.system("clear")
        ver()
    elif re== "2":
        os.system("clear")
        agregar()
    elif re== "3":
        modificar()
    elif re== "4":
        eliminar()
    elif re== "5":
        os.system ("cls")
        menuprincipal()
    else:
        os.system("cls")
        input("\tIngrese una opcion valida de nuestro MENU")
        menureser()

#---------------------------------------------------------------
# Ver
#---------------------------------------------------------------

def ver():
    os.system("cls")

    con = sqlite3.connect("CARIBE.s3db")
    cursor = con.cursor()
    cursor.execute("SELECT * FROM registro")

    print("\tReservaciones Registradas")
    print("")
    
    for v in cursor:
        print("\tReservacion:                   ", v[0])
        print("\tNombres:                       ", v[1])
        print("\tApellido Paterno:              ", v[2])
        print("\tApellido Materno:              ", v[3])
        print("\tN° de DNI:                     ", v[4])
        print("\tN° de Pasaporte:               ", v[5])
        print("\tN° de Visa:                    ", v[6])
        print("\tNacionalidad:                  ", v[7])
        print("\tCiudad de Origen:              ", v[8])
        print("\tEmbarcacion:                   ", v[9])
        print("\tPaquete de viaje:              ", v[10])
        print("\tModalidad:                     ", v[11], "-", v[12])
        print("\n\t------------------------------------------------------------\n")
    con.close()
    input("\tPresione 'Enter' para volver al menu...")
    menureser()
