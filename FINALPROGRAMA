                                            print("\tSolo tenemos disponibles 4 tipos de viaje ingrese nuevamente porfavor.")
                                else:
                                    print("\tIngrese una clase valida")
                            break
                        except ValueError:
                            print("\tOpcion no disponible ingrese nuevamente porfavor.")
                else:
                    print("\tIngrese una clase valida")
            break
        except ValueError:
            print("\tSolo tenemos 3 dis paquetes disponibles ingrese nuevamente porfavor")
    

