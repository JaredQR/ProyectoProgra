def modificar():
    os.system("cls")

    con = sqlite3.connect("CARIBE.s3db")
    cursor = con.cursor()
    cursor.execute("SELECT * FROM registro")

    print("\tReservaciones Registradas")
    print("")
    
    for v in cursor:
        print("\tReservacion:                   ", v[0])
        print("\tNombres:                       ", v[1])
        print("\tApellido Paterno:              ", v[2])
        print("\tApellido Materno:              ", v[3])
        print("\tN° de DNI:                     ", v[4])
        print("\tN° de Pasaporte:               ", v[5])
        print("\tN° de Visa:                    ", v[6])
        print("\tNacionalidad:                  ", v[7])
        print("\tCiudad de Origen:              ", v[8])
        print("\tEmbarcacion:                   ", v[9])
        print("\tPaquete de viaje:              ", v[10])
        print("\tModalidad:                     ", v[11], "-", v[12])
        print("")

    codigo = input("\tDigite el codigo del campo que desea modificar: ")

    print("\n\tIngrese los datos en los siguientes campos para modificar: ")

    nombre=nombr()
    apellidop=apellidp()
    apellidom=apellidm()
    nacionalidad=nacionalida()
    ciudad=ciuda()

    #DNI
    while True:
        try:
            c=1
            while c!=8:
                dni=int(input("\tDNI: "))
                c=len(str(dni))
                if c!=8:
                    print("\tEl N° de Dni es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Dni es incorrecto verifique porfavor.")
    dni=str(dni)

    #PASAPORTE
    while True:
        try:
            a=1
            while a!=8:
                pasaporte=int(input("\tPasaporte : "))
                a=len(str(pasaporte))
                if a!=8:
                    print("\tEl N° de Pasaporte es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Pasaporte es incorrecto verifique porfavor.")
    pasaporte=str(pasaporte)
    #VISA
    while True:
        try:
            v=1
            while v!=8:
                visa=int(input("\tVisa: "))
                v=len(str(visa))
                if v!=8:
                    print("\tEl N° de Visa es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Visa es incorrecto verifique porfavor.")
    visa=str(visa)

    

    print("\tNuestras Embarcaciones Disponibles")
    print("")
    print("\t[1]  Embarcacion - SILVER MUSE")
    print("\t[2]  Embarcacion - SILVER CLOUD")
    print("\t[3]  Embarcacion - SILVER WIND")
    print("\t[4]  Embarcacion - SILVER DISCOVER")
    while True:
        try:
            tr=0
            while (tr!=1 and tr!=2):
                tr=int(input("¿Que tipo de reservacion desea hacer(1,2): "))
                if tr==1:
                    tres='SILVER MUSE'
                elif tr==2:
                    tres='SILVER CLOUD'
                elif tr==3:
                    tres='SILVER WIND'
                elif tr==4:
                    tres='SILVER DISCOVER'
                else:
                    print("Ingrese un tipo de embarcacion valido")
            break
        except ValueError:
            print("Solo tenemos 4 embaraciones disponibles.")
    
    tembarcacion()

    cursor.execute("update registro set nombre = '"+nombr+"', apellidop = '"+apellidp+"', apellidom = '"+apellidm+"',nacionalidad = '"+nacionalida+"', ciudad = '"+ciuda+"', dni = '"+dni+"', pasaporte = '"+pasaporte+"', visa = '"+visa+"', thab1 = '"+th1+"', thab2 = '"+th2+"', thab3 = '"+th3+"', embarcacion = '"+tres+"' where ID = '"+codigo+"' ")
    con.commit()
    con.close()
    os.system("cls")
    input("Reservacion modificada")
    menureser()
