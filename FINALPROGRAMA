def agregar():
    os.system("cls")
    print("")
    print("\tAgregar Reservacion")
    print("")

    print("\tIngrese los datos que a continuacion se le piden POR FAVOR\n")
    nombre=nombr()
    apellidop=apellidp()
    apellidom=apellidm()
    nacionalidad=nacionalida()
    ciudad=ciuda()
    
    #DNI
    while True:
        try:
            c=1
            while c!=8:
                dni=int(input("\tDNI: "))
                c=len(str(dni))
                if c!=8:
                    print("\tEl N° de Dni es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Dni es incorrecto verifique porfavor.")
    dni=str(dni)

    #PASAPORTE
    while True:
        try:
            a=1
            while a!=8:
                pasaporte=int(input("\tPasaporte : "))
                a=len(str(pasaporte))
                if a!=8:
                    print("\tEl N° de Pasaporte es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Pasaporte es incorrecto verifique porfavor.")
    pasaporte=str(pasaporte)
    #VISA
    while True:
        try:
            v=1
            while v!=8:
                visa=int(input("\tVisa: "))
                v=len(str(visa))
                if v!=8:
                    print("\tEl N° de Visa es incorrecto verifique porfavor.")
            break
        except ValueError:
            print("\tEl N° de Visa es incorrecto verifique porfavor.")
    visa=str(visa)

    #EMBARCACION
    print("\tEmbarcacion")
    print("")
    print("\t[1]  Embarcacion - SILVER MUSE")
    print("\t[2]  Embarcacion - SILVER CLOUD")
    print("\t[3]  Embarcacion - SILVER WIND")
    print("\t[4]  Embarcacion - SILVER DISCOVER")
    while True:
        try:
            
            tr=0
            while (tr!=1 and tr!=2 and tr!=3 and tr!=4):
                tr=int(input("¿A que tipo de Embarcacion hara su reserva: "))
                if tr==1:
                    tres='SILVERMUSE'
                elif tr==2:
                    tres='SILVERCLOUD'
                elif tr==3:
                    tres='SILVERWIND'
                elif tr==4:
                    tres='SILVERDISCOVER'
                else:
                    print("Solo tenemos 4 embaraciones disponibles.")
                    print("-SILVER MUSE")
                    print("SILVER CLOUD")
                    print("SILVER WIND")
                    print("SILVER DISCOVER")
                    print("Escoga una embarcacion disponible")
            break
        except ValueError:
            print("Solo tenemos 4 embaraciones disponibles.")
            print("-SILVER MUSE")
            print("SILVER CLOUD")
            print("SILVER WIND")
            print("SILVER DISCOVER")
            print("Escoga una embarcacion disponible")
    tembarcacion()

    con = sqlite3.connect("CARIBE.s3db")
    cursor = con.cursor()
    cursor.execute("insert into registro (nombre,apellidop,apellidom,dni,pasaporte,visa,nacionalidad,ciudad,embarcacion,thab1,thab2,thab3) values ('"+nombr+"','"+apellidp+"','"+apellidm+"','"+dni+"','"+pasaporte+"','"+visa+"','"+nacionalida+"','"+ciuda+"','"+tres+"','"+th1+"','"+th2+"','"+th3+"')")
    con.commit()
    con.close()
    os.system("cls")
    input("Reservacion registrada satisfactoriamente!")
    menureser()
