def tembarcacion():
    global th1, th2, th3
    
    print("\tSeleccione un tipo de  Paquete ")
    print("\t[1]   |    Paquete Premiun")
    print("\t[2]   |    Paquete Silver")
    print("\t[3]   |    Paquete Royalcaribbean")

    while True:
        try:
            th1a=0
            while (th1a!=1 and th1a!=2 and th1a!=3):
                th1a=int(input("\tPaquete: "))
                if th1a==1:
                    th1='PaquetePremiun'
                    print("")
                    print("\tSeleccion la modalidad ")
                    print("\t--------------------------------")
                    print("\tSeleccione su modalidad ")
                    print("\t[1]   |    Familiar 4 Personas")
                    print("\t[2]   |    Familiar 5 Personas")
                    print("\t[3]   |    Familiar 6 Personas")
                    print("\t[4]   |    Pareja 2 Personas")
                    print("\t[5]   |    Pareja Ederly 2 Personas")
                    print("\t[6]   |    Alone 1")
                    
                    while True:
                        try:
                            th2a=0
                            while (th2a!=1 and th2a!=2 and th2a!=3 and th2a!=4 and th2a!=5 and th2a!=6):
                                th2a=int(input("\tTipo de modalidad: "))
                                if th2a==1:
                                    th2='Familiar'
                                    th3=''
                                if th2a==2:
                                    th2='Familiar'
                                    th3=''
                                if th2a==3:
                                    th2='Familiar'
                                    th3=''
                                elif th2a==4:
                                    th2='Pareja'
                                    th3=''
                                elif th2a==5:
                                    th2='Elderly'
                                    th3=''
                                if th2a==6:
                                    th2='Alone'
                                    th3=''
                                else:
                                    print("\tIngrese de modalidad valido")
                            break
                        except ValueError:
                            print("\tSolo tenemos disponibles 6 modalidades ingrese nuevamente porfavor.")
                elif th1a==2:
                    th1='PaqueteSilver'
                    print("\tSeleccion la modalidad ")
                    print("\t--------------------------------")
                    print("\tSeleccione su modalidad ")
                    print("\t[1]   |    Familiar 3 Personas")
                    print("\t[2]   |    Familiar 4 Personas")
                    print("\t[3]   |    Familiar 5 Personas")
                    print("\t[4]   |    Familiar 6 Personas")
                    print("\t[5]   |    Pareja 2 Personas")
                    print("\t[6]   |    Pareja Ederly 2 Personas")
                    print("\t[7]   |    Alone 1")
                    while True:
                        try:
                            th2a=0
                            while (th2a!=1 and th2a!=2 and th2a!=3 and th2a!=4 and th2a!=5 and th2a!=6 and th2a!=7):
                                th2a=int(input("\tTipo de Modalidad: "))
                                if th2a==1:
                                    th2='Familiar'
                                    th3=''
                                elif th2a==2:
                                    th2='Familiar'
                                    th3=''
                                elif th2a==3:
                                    th2='Familiar'
                                    th3=''
                                elif th2a==4:
                                    th2='Familiar'
                                    th3=''
                                elif th2a==5:
                                    th2='Pareja'
                                    th3=''
                                elif th2a==6:
                                    th2='Ederly'
                                    th3=''
                                elif th2a==7:
                                    th2='Alone'
                                    th3=''
                                else:
                                    print("\tIngrese un tipo valido")
                            break
                        except ValueError:
                            print("\tSolo tenemos disponibles 7 modalidades ingrese nuevamente porfavor.")
                elif th1a==3:
                    th1='PaqueteRoyalC'
                    print("")
                    print("\tSeleccion la modalidad ")
                    print("\t--------------------------------")
                    print("\t[1]   |    Familiar 4 Personas")
                    print("\t[2]   |    Familiar 5 Personas")
                    print("\t[3]   |    Pareja 2 Personas")
                    print("\t[4]   |    Pareja Ederly 2 Personas")
                    while True:
                        try:
                            th2a=0
                            while (th2a!=1 and th2a!=2):
                                th2a=int(input("\tTipo de Paquete: "))
